<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    style

    <style name="StyleMainTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/title_background</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="StyleDetailTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/default_text_color</item>
    </style>

    <style name="StyleDetailSubtitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/default_text_color</item>
    </style>

    <style name="StyleTitleItem" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/default_text_color</item>
    </style>

    <style name="StyleSubtileItem">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
